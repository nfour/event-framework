{
  "name": "reaco",
  "description": "A reactive component evented framework",
  "version": "0.3.0-beta",
  "license": "MIT",
  "keywords": [
    "library"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "tslint --project tsconfig.json",
    "release": "cd build && yarn publish",
    "build": "bash -v -e scripts/build.bash",
    "build:link": "cd build && yarn unlink; yarn link",
    "changelog:verify": "changelog-verify CHANGELOG.md",
    "changelog:version": "version-changelog CHANGELOG.md && git add CHANGELOG.md",
    "preversion": "yarn lint && yarn build && yarn test:coverage && yarn changelog:verify",
    "version": "yarn changelog:version",
    "postversion": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nfour/reaco"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.43",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^9.4.7",
    "@types/node-fetch": "^1.6.7",
    "changelog-verify": "^1.1.0",
    "jest": "^23.5.0",
    "jest-spec-reporter": "^1.0.4",
    "jest-tap-reporter": "^1.9.0",
    "nodemon": "^1.18.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^5.0.1",
    "tslint": "^5.11.0",
    "tslint-config-temando": "^1.5.0",
    "typescript": "^3.1.1",
    "version-changelog": "^2.1.0"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^1.7.5",
    "@types/dependency-tree": "^6.1.0",
    "@types/escape-string-regexp": "^1.0.0",
    "@types/execa": "^0.8.1",
    "@types/koa-bodyparser": "^3.0.26",
    "@types/lodash": "^4.14.105",
    "@types/qs": "^6.5.1",
    "bluebird": "^3.5.0",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.4",
    "decache": "^4.5.0",
    "dependency-tree": "^6.3.0",
    "escape-string-regexp": "^1.0.5",
    "execa": "^0.9.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.3.0",
    "lodash": "^4.17.5",
    "node-fetch": "^1.7.3",
    "qs": "^6.5.1",
    "uuid": "^3.1.0"
  }
}
